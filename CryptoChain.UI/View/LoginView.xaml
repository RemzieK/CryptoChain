<Page x:Class="CryptoChain.UI.View.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoChain.UI.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginView" Height="550" Width="800"
      Background="Transparent"
      MouseDown="Window_MouseDown">

    <Border CornerRadius="18">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/background.jpg"/>
        </Border.Background>
        <Border CornerRadius="12"
        Background="#66718eb6" 
        BorderBrush="#1b1448"
        BorderThickness="7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text=" Log in"
                           Foreground="White"
                           FontSize="20"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                        Background="Black"
                        BorderThickness="0"
                        Content="_"
                        Foreground="White"
                        FontSize="20"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">

                    </Button>

                    <Button x:Name="btnClose"
                        Background="Red"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="20"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click">

                    </Button>

                </Grid>

                <StackPanel Width="300"
                        Grid.Row="2"
                        Orientation="Vertical"
                        Margin="0,35,0,0">
                    <TextBlock Text="CryptoChain"
                           Foreground="White"
                           FontSize="40"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center" 
                           TextAlignment="Center" 
                           FontStyle="Italic" 
                           FontWeight="Bold"
                           Margin="0,10,0,0"/>

                    <TextBlock Text="Email"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,60,0,0"/>

                    <TextBox x:Name="txtUser"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16"
                         FontWeight="Medium"
                         FontFamily="Montserrat" 
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="White"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0" 
                         Padding="25,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Assets/user.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                        </TextBox.Background>

                    </TextBox>

                    <TextBlock Text="Password"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPass"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         FontSize="16"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="White"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="25,0,0,0">

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Assets/key.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                        </PasswordBox.Background>

                    </PasswordBox>

                    <Button Command="{Binding LoginCommand}"
                        Background="#1b1448"
                        BorderThickness="0"
                        Content="Log In"
                        Foreground="White"
                        FontSize="20"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,50,0,0"
                       
                        Width="150"
                        Height="25">

                    </Button>

                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">

                        <TextBlock Text="Forgot password?"
                               Foreground="LightGray"
                               FontSize="12"
                               FontFamily="Montserrat"
                               FontWeight="Medium"/>
                        <TextBlock Text="Reset"
                               Foreground="White"
                               FontSize="12"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Margin="8,0,0,0"
                               Cursor="Hand"/>


                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,1,0,0">

                        <TextBlock Text="Don't have an account?"
                                    Foreground="LightGray"
                                    FontSize="12"
                                    FontFamily="Montserrat"
                                    FontWeight="Medium"/>
                        <TextBlock Text="Register"
                               Foreground="White"
                               FontSize="12"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Margin="8,0,0,0"
                               Cursor="Hand"
                               MouseDown="Register_MouseDown"/>

                    </StackPanel>


                </StackPanel>

            </Grid>

        </Border>
    </Border>
</Page>
